<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="220.0" prefWidth="170.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.rsmi.bibleo.BookController">
   <styleClass>
      <String fx:value="shadow" />
      <String fx:value="bg-white" />
   </styleClass>
   <children>
      <Rectangle id="rcCover" fx:id="rcCover" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="240.0" stroke="TRANSPARENT" strokeType="INSIDE" styleClass="shadow" width="150.0" />
      <Label fx:id="lblTitle" text="Title">
         <font>
            <Font name="Cambria" size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblAuthor" style="-fx-font-size: 13;" styleClass="font-abel" text="Author" />
      <HBox spacing="3.0">
         <children>
            <Label style="-fx-font-size: 13;" styleClass="font-abel" text="Date: " />
            <Label fx:id="lblPublishedDate" style="-fx-font-size: 13;" styleClass="font-abel" text="01/12/2023" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
